@using PagedList.Mvc;
@using EduKeeper.Web.Models;
@model CourseCollectionModel

<div id="courses">
    <table id="courses">
        @for (int i = 0; i < Model.Courses.Count; i++)
        {
            <tr>
                <td class="title">
                    <div class="navbar-link">
                        <a href="@Url.Action("Course", "Study", new { courseId = Model.Courses[i].Id })">@Model.Courses[i].Title</a>
                    </div>
                </td>
                <td class="description">
                    <div class="description">@Model.Courses[i].Description</div>
                    @*<a href="@Url.Action("User", new { id = Model.Courses[i].Owner.Id })">
                        <div>Owner: @String.Format("{0} {1}", Model.Courses[i].Owner.FirstName, Model.Courses[i].Owner.LastName)</div>
                        </a>*@
                </td>
                <td class="action">
                    <div>
                        @Html.ActionLink("Join", "JoinCourse", new { courseId = Model.Courses[i].Id }, new { @class = "btn btn-lg btn-info" })
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="3"><hr class="separator" /></td>
            </tr>

        }
    </table>
    <div class="pagedList" data-target="#courses">
        @Html.PagedListPager(Model.Courses, pageNumber => Url.Action("Courses", new { pageNumber }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
    </div>
</div>