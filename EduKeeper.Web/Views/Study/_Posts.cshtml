@model PostCollectionModel


<ul class="list-group" id="posts">
    @foreach (var item in Model.Posts)
    {
        <li class="list-group-item">
            <div class="col-xs-12 col-sm-2 col-lg-2 avatar">
                <div class="avatar">
                    <img src="~/UsersContent/@(item.AuthorId.ToString() + ".jpg")"
                         alt="@item.AuthorName"
                         class="img-responsive photo" />
                </div>
            </div>
            <div>
                <div class="author @*col-xs-10 col-lg-10*@">
                    @item.AuthorName"
                </div>
                <div class="post">
                    @item.Message
                </div>
            </div>

            <div class="clearfix"/>
        </li>
    }
</ul>

<script type="text/javascript">

    window.Urls = {
        getPostsUrl: "@Url.Action("GetPost")"
    };
</script>

