@model CourseModel
@{
    ViewBag.Title = "Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="@Url.Content("~/Scripts/courseInfinite.js")"></script>
    <script src="@Url.Content("~/Scripts/courseServices.js")"></script>
}
<script id="postsTemplate" type="text/x-jquery-tmpl">
    <li class="list-group-item">
        @*<div>
                ${Id}, //post Id
            </div>*@
        <div class="col-xs-12 col-sm-2 col-lg-2">
            <div class="avatar">
                <div>
                    <img src="/UsersContent/${AuthorId}.jpg"
                         alt="${AuthorName}"
                         class="img-responsive photo" />
                </div>
            </div>
        </div>
        <div>
            <div class="author">
                ${AuthorName}
            </div>
            <div class="post">
                ${Message}
            </div>
        </div>
        <div>
            <ul class="list-group comments" id=${Id}>
                {{if Comments != null}}
                {{each Comments}}
                <li class="list-group-item">
                    <div class="col-xs-12 col-sm-2 col-lg-2">
                        <div class="avatar">
                            <div>
                                <img src="/UsersContent/${$value.AuthorId}.jpg"
                                     alt="${$value.AuthorName}"
                                     class="img-responsive photo" />
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="comment-author">
                            ${$value.AuthorName} <em>${getDate($value.DateWritten)}</em>
                        </div>
                        <div class="post">
                            ${$value.Message}
                        </div>
                    </div>
                </li>
                {{/each}}
                {{/if}}
            </ul>
            <div class="comment">
                <input type="button" name="postComment" value="Post" onclick="postComment(${Id})" class="btn btn-sm" />
                <div class="text">
                    <textarea id="${createInputId(Id)}" class="form-control" />
                </div>
            </div>
        </div>
        <div class="clearfix" />
    </li>
</script>

<script id="commentTemplate" type="text/x-jquery-tmpl">
    <li class="list-group-item">
        <div class="col-xs-12 col-sm-2 col-lg-2">
            <div class="avatar">
                <div>
                    <img src="/UsersContent/${AuthorId}.jpg"
                         alt="${AuthorName}"
                         class="img-responsive photo" />
                </div>
            </div>
        </div>
        <div>
            <div class="comment-author">
                ${AuthorName} <em>${getDate(DateWritten)}</em>
            </div>
            <div class="post">
                ${Message}
            </div>
        </div>
    </li>
</script>

<h2>@Model.Title</h2>

<h5>@Model.Description</h5>

<div class="col-xs-12 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
        <div class="panel-heading c-list">
            <span class="title">Posts</span>
        </div>
        <div class="new-post">
            <textarea class="form-control" id="postMessage"></textarea>
            <input type="hidden" name="courseId" id="courseId" value="@Model.Id" />
            <input type="button" name="name" value="Post" class="btn btn-lg btn-primary" id="btn-post" onclick="postMessage()" />
        </div>
        <ul class="list-group" id="posts"></ul>
        <div id="load">
            <img src="@Url.Content("~/App_Data/loading.gif")" alt="loading..." />
        </div>
    </div>
</div>
<div class=" col-xs-2">
    @if (Model.IsUserParticipant)
    {
        @Html.ActionLink("Leave", "LeaveCourse", new { courseId = Model.Id }, new { @class = "btn btn-lg btn-danger" })
    }
    else
    {
        @Html.ActionLink("Join", "JoinCourse", new { courseId = Model.Id }, new { @class = "btn btn-lg btn-success" })
    }
</div>